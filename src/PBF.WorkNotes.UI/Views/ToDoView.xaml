<UserControl x:Class="PBF.WorkNotes.UI.Views.ToDoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:text="clr-namespace:System.Windows;assembly=PresentationCore"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:v="clr-namespace:PBF.WorkNotes.UI.Views"
             xmlns:vm="clr-namespace:PBF.WorkNotes.UI.ViewModels"
             xmlns:local="clr-namespace:PBF.WorkNotes.UI.Helpers"
             mc:Ignorable="d">
    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Text="{Binding ToDo.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="State:" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" ItemsSource="{Binding States}" SelectedItem="{Binding ToDo.State, Mode=TwoWay}" DisplayMemberPath="Name" Width="180" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Text="Priority:" Margin="0,0,10,5"/>
                <ComboBox Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" ItemsSource="{Binding Priorities}" SelectedItem="{Binding ToDo.Priority, Mode=TwoWay}" DisplayMemberPath="Name" Width="180" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Text="Is Public:" Margin="0,0,10,5"/>
                <CheckBox Grid.Row="1" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Work Date:" Margin="0,0,10,5"/>
                <DatePicker Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding ToDo.WorkDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="180" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Text="Due Date:" Margin="0,0,10,5"/>
                <DatePicker Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding ToDo.DueDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="180" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Text="Created Date:" Margin="0,0,10,5"/>
                <DatePicker Grid.Row="2" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding ToDo.CreatedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="180" Margin="0,0,0,5"/>
                <ScrollViewer Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                    <RichTextBox x:Name="richTextBox"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="RichTextBoxSelectionChanged">
                        <i:Interaction.Behaviors>
                            <local:RichTextBoxDocumentBehavior Document="{Binding FormattedDocumentContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </i:Interaction.Behaviors>
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="Type here and apply formatting..."/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </ScrollViewer>
            </Grid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="0,0"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
